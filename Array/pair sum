// find the total numbers of pairs in array whose sum is equal t the given value x.
#include<iostream>
using namespace std;

int main(){
    int arr[]={2,5,4,7,3};
    int target_sum=7;
   int pairs=0;
   int size=5;
    for(int i=0;i<5;i++){
        for(int j=1;j<size;j++){
            if(arr[i]+arr[j]==target_sum){
            
            cout<<arr[i]<<"and"<<arr[j]<<endl;
           pairs++;
            }
        }
        
    }
    cout<<pairs<<endl;
    
    return 0;
}